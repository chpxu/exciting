<input>
  <title>Silicon</title>
  <structure speciespath="./" autormt="false">
    <crystal>
      <basevect>5.13 5.13 0.00</basevect>
      <basevect>5.13 0.00 5.13</basevect>
      <basevect>0.00 5.13 5.13</basevect>
    </crystal>
    <species speciesfile="Si.xml" rmt="2.1">
      <atom coord="0.00 0.00 0.00"></atom>
      <atom coord="0.25 0.25 0.25"></atom>
    </species>
  </structure>

  <groundstate
    do="fromscratch"
    rgkmax="7.0"
    gmaxvr="12"
    ngridk="4 4 4"
    xctype="LDA_PW"
    outputlevel="high"
    >
  </groundstate>

  <properties>

    <chargedensityplot>
      <plot3d>
        <box grid="10 10 10">
          <origin coord="0.0 0.0 0.0"/>
          <point  coord="1.0 0.0 0.0"/>
          <point  coord="0.0 1.0 0.0"/>
          <point  coord="0.0 0.0 1.0"/>
        </box>
      </plot3d>
    </chargedensityplot>
    
    <exccplot>
      <plot3d>
        <box grid="10 10 10">
          <origin coord="0.0 0.0 0.0"/>
          <point  coord="1.0 0.0 0.0"/>
          <point  coord="0.0 1.0 0.0"/>
          <point  coord="0.0 0.0 1.0"/>
        </box>
      </plot3d>
    </exccplot>
    
    <wfplot>
      <kstlist>
        <pointstatepair>1 1</pointstatepair>
      </kstlist>
      <plot3d>
        <box grid="10 10 10">
          <origin coord="0.0 0.0 0.0"/>
          <point  coord="1.0 0.0 0.0"/>
          <point  coord="0.0 1.0 0.0"/>
          <point  coord="0.0 0.0 1.0"/>
        </box>
      </plot3d>
    </wfplot>

    <elfplot>
      <plot3d>
        <box grid="10 10 10">
          <origin coord="0.0 0.0 0.0"/>
          <point  coord="1.0 0.0 0.0"/>
          <point  coord="0.0 1.0 0.0"/>
          <point  coord="0.0 0.0 1.0"/>
        </box>
      </plot3d>
    </elfplot>    
    
    <electricfield>
      <plot3d>
        <box grid="10 10 10">
          <origin coord="0.0 0.0 0.0"/>
          <point  coord="1.0 0.0 0.0"/>
          <point  coord="0.0 1.0 0.0"/>
          <point  coord="0.0 0.0 1.0"/>
        </box>
      </plot3d>
    </electricfield>

    
  </properties>

</input>

