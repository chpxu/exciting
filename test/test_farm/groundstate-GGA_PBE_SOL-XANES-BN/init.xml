<init name        = 'groundstate-GGA_PBE_SOL-XANES-TiO2'
      description = 'Test for a XANES calculation from the Ti L_23 edge.'
      executable  = 'excitingser'>
  <test file      = 'info.xml'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
	  ignore    = 'timing;rmslog10'
	  tolIter   = '3'/>
  <test   file      = 'INFO.OUT'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = 'Wall time (seconds);CPU time for scf_cycle (seconds);CPU time for vxnl (seconds)'
          tolIter   = '3'/>
  <test   file      = 'atoms.xml'          
          tolFloat  = '1e-6'              
          tolMSE    = '1e-6'              
          condition = '0 0'               
          ignore    = ''/>
  <test   file      = 'eigval.xml'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''>
          <eigval
              eigvalPair = '1,2 3,4 16,17'
              tolEigval   = '1e-8'/>
        </test>
  <test   file      = 'evalcore.xml'
          tolFloat  = '1e-8'
          tolMSE    = '1e-8'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'geometry.xml'
          tolFloat  = '1e-8'
          tolMSE    = '1e-8'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EPSILON/EPSILON_BSE-singlet-TDA-BAR_SCR-full_OC11.OUT'
          tolFloat  = '1e-7'
          tolMSE    = '1e-7'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EPSILON/EPSILON_BSE-singlet-TDA-BAR_SCR-full_OC22.OUT'
          tolFloat  = '1e-7'
          tolMSE    = '1e-7'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EPSILON/EPSILON_BSE-singlet-TDA-BAR_SCR-full_OC33.OUT'
          tolFloat  = '1e-7'
          tolMSE    = '1e-7'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EXCITON/EXCITON_BSE-singlet-TDA-BAR_SCR-full_OC11.OUT'
          tolFloat  = '1e-7'
          tolMSE    = '1e-7'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EXCITON/EXCITON_BSE-singlet-TDA-BAR_SCR-full_OC22.OUT'
          tolFloat  = '1e-7'
          tolMSE    = '1e-7'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EXCITON/EXCITON_BSE-singlet-TDA-BAR_SCR-full_OC33.OUT'
          tolFloat  = '1e-7'
          tolMSE    = '1e-7'
          condition = '0 0'
          ignore    = ''/>
  
</init>
