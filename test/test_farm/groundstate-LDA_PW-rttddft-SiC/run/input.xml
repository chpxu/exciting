<input>
        <title>C</title>
        <structure speciespath="./">
                <crystal scale="8.2014">
                        <basevect>0.0 0.5 0.5 </basevect>
                        <basevect>0.5 0.0 0.5 </basevect>
                        <basevect>0.5 0.5 0.0 </basevect>
                </crystal>
                <species speciesfile="C.xml" rmt="1.6">
			<atom coord="0.00 0.00 0.00"/>
		</species>
		<species speciesfile="Si.xml" rmt="1.9">
                        <atom coord="0.25 0.25 0.25"/>
                </species>
        </structure>
        <groundstate
                ngridk="3 3 3"
                rgkmax="4.0"
                gmaxvr="15.0"
                epsengy="1e-6"
                reducek="false"
                nosym="true"
                vkloff="0.01 0.02 0.03"
                do="fromscratch"
                mixerswitch="1"
                mixer="msec"
                findlinentype="Wigner_Seitz"
                frozencore="false"
                outputlevel="high"
                nempty="5"
                useDensityMatrix="false"
                xctype="LDA_PW">
        </groundstate>
        <xs
          xstype ="RT-TDDFT"
          ngridk="3 3 3"
	  vkloff="0.01 0.02 0.03"
	  nempty="5"
          nosym="true"
	  reducek="false" >


          <rt_tddft
            propagator="AETRS"
            time_step="0.1d0"
            end_time="10.d0"
            read_pmatbasis="false"
            print_timing_general="false"
            print_timing_detailed="false"
            calculate_total_energy="true"
            calculate_n_excited_electrons="true"
            print_after_iterations="1"
            vector_potential_solver="improvedeuler">
	    <laser field_type="total">
		<trap_cos amplitude='1.d0' omega='4.d0' phase='0.d0' t0='0.1d0' rise_time='1.d0'
                      width='7.d0' direction='x'/>
            </laser>
          </rt_tddft>

        </xs>
</input>
