<init name        = 'ground state'
      description = 'All groundstate files are tested.'>
  <test file      = 'info.xml'
          tolFloat  = '1e-5'
          tolMSE    = '1e-5'
          condition = '0 0'
	  ignore    = 'timing;rmslog10'
	  maxIter   = '25'/>
  <test   file      = 'INFO.OUT'
          tolFloat  = '1e-5'
          tolMSE    = '1e-5'
          condition = '0 0'
          ignore    = 'Wall time (seconds);CPU time for scf_cycle (seconds);CPU time for vxnl (seconds);DOS at Fermi energy (states/Ha/cell)'
          maxIter   = '25'/>
  <test   file      = 'atoms.xml'          
          tolFloat  = '1e-6'              
          tolMSE    = '1e-6'              
          condition = '0 0'               
          ignore    = ''/>
  <test   file      = 'eigval.xml'
          tolFloat  = '1e-3'
          tolMSE    = '1e-3'
          condition = '0 0'
          ignore    = ''>
     <eigval
              eigvalPair = '2,3 11,12 21,22 33,34 36,37 1,33'
              tolEigval   = '1e-8'/>
      </test>
  <test   file      = 'evalcore.xml'
          tolFloat  = '1e-8'
          tolMSE    = '1e-8'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'geometry.xml'
          tolFloat  = '1e-8'
          tolMSE    = '1e-8'
          condition = '0 0'
          ignore    = ''/>
</init>
