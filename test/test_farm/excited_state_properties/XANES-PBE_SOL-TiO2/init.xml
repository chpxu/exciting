<init name        = 'groundstate-GGA_PBE_SOL-XANES-BN'
      description = 'Test for XANES from the N K edge.'
      executable  = 'excitingser'>
  <test file      = 'info.xml'
          tolFloat  = '5e-6'
          tolMSE    = '5e-6'
          condition = '0 0'
          ignore    = 'timing;rmslog10'
          tolIter   = '7'/>
  <test   file      = 'atoms.xml'
          tolFloat  = '5e-6'
          tolMSE    = '5e-6'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'INFO.OUT'
          tolFloat  = '5e-6'
          tolMSE    = '5e-6'
          condition = '0 0'
          ignore    = 'Wall time (seconds);CPU time for vxnl (seconds);CPU time for scf_cycle (seconds)'
          tolIter   = '7'/>
  <test   file      = 'eigval.xml'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''>
          <eigval
              eigvalPair = '2,3 5,6'
              tolEigval   = '1e-8'/>
        </test>
  <test   file      = 'evalcore.xml'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'geometry.xml'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EPSILON_BSE-singlet-TDA-BAR_SCR-full_OC11.OUT'
          tolFloat  = '1e-7'
          tolMSE    = '1e-7'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EPSILON_BSE-singlet-TDA-BAR_SCR-full_OC22.OUT'
          tolFloat  = '1e-7'
          tolMSE    = '1e-7'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EPSILON_BSE-singlet-TDA-BAR_SCR-full_OC33.OUT'
          tolFloat  = '1e-7'
          tolMSE    = '1e-7'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EXCITON_BSE-singlet-TDA-BAR_SCR-full_OC11.OUT'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EXCITON_BSE-singlet-TDA-BAR_SCR-full_OC22.OUT'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'EXCITON_BSE-singlet-TDA-BAR_SCR-full_OC33.OUT'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''/>
</init>
