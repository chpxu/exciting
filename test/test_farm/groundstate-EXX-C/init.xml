<init name        = 'groundstate-EXX-C'
      description = 'test for EXX functional'
      executable  = 'exciting_serial'>
  <test file      = 'info.xml'
          tolFloat  = '1e-5'
          tolMSE    = '1e-5'
          condition = '0 0'
          ignore    = 'timing;rmslog10'
          tolIter   = '3'/>
  <test   file      = 'atoms.xml'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'INFO.OUT'
          tolFloat  = '1e-5'
          tolMSE    = '1e-5'
          condition = '0 0'
          ignore    = 'Wall time (seconds);CPU time for vxnl (seconds);CPU time for scf_cycle (seconds)'
          tolIter   = '3'/>
  <test   file      = 'eigval.xml'
          tolFloat  = '1e-3'
          tolMSE    = '1e-3'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'evalcore.xml'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''/>
  <test   file      = 'geometry.xml'
          tolFloat  = '1e-6'
          tolMSE    = '1e-6'
          condition = '0 0'
          ignore    = ''/>
</init>
