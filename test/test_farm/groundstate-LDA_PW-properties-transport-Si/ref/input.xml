<input>
  <title>Silicon</title>
  <structure speciespath="./" autormt="false">
    <crystal>
      <basevect>5.13 5.13 0.00</basevect>
      <basevect>5.13 0.00 5.13</basevect>
      <basevect>0.00 5.13 5.13</basevect>
    </crystal>
    <species speciesfile="Si.xml" rmt="2.1">
      <atom coord="0.00 0.00 0.00"></atom>
      <atom coord="0.25 0.25 0.25"></atom>
    </species>
  </structure>

  <groundstate
    do="fromscratch"
    rgkmax="7.0"
    gmaxvr="12"
    ngridk="4 4 4"
    xctype="LDA_PW"
    outputlevel="high"
    >
  </groundstate>

  <properties>
    
    <momentummatrix/>
    
    <boltzequ
      output_energies_in_ev="true"
      output_in_si_units="true"
      energy_reference="efermi"
      transport_df_range="-1.0 0.5"
      transport_df_spacing="0.15"
      temperature_range="300 1200"
      temperature_spacing="100"
      chemical_potential_range="0.01 0.01"
      chemical_potential_spacing="1"
      transport_df_broadening="0.001"
      use_transport_df="false"
      use_doping_concentration="true"
      doping_concentration = "1e-19">
      <condcomp>1 1</condcomp>
    </boltzequ>
    
  </properties>

</input>

