                outputlevel="high"
                nempty="20"
                useDensityMatrix="false"
                xctype="LDA_PW">
        </groundstate>
        <xs
          xstype ="RT-TDDFT"
	  ngridk="3 3 3"
	  rgkmax="4.0d0"
	  vkloff="-0.07 0.11 0.003"
          nosym="true"
	  reducek="false"
          nempty="20">


          <rt_tddft
            propagator="AETRS"
            time_step="0.25d0"
            end_time="10.0d0"
            read_pmatbasis="false"
            print_timing_general="true"
            print_timing_detailed="true"
            calculate_total_energy="false"
            calculate_n_excited_electrons="false"
            print_after_iterations="1"
            vector_potential_solver="improvedeuler">
