  <gw
    taskname="band" coreflag="all" skipgnd="true"
    ibgw="1" nbgw="20"
    nempty="100"
    ngridq="4 4 4"
    rmax="100"
    >
    <mixbasis
      lmaxmb="3"
      epsmb="1.d-4"
      gmb="1.0"
    ></mixbasis>
    <freqgrid
      fgrid="clencurt2"
      nomeg="16"
      freqmax="1.0"
    ></freqgrid>
    <barecoul
      pwm="2.0"
      basis="mb"
      barcevtol="0.2"
    ></barecoul>
    <selfenergy
      method="ac" actype="aaa" tol="1.d-14"
      singularity="mpb"
      eqpsolver="0"
      eshift="1"
      swidth="1.d-4"
      >
      <wgrid
        type="eqdist"
        size="1000"
        wmax="1.0"
        wmin="-1.5"
      />
    </selfenergy>
  </gw>
  
